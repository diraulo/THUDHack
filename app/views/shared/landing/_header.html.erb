<header class="header">
  <nav class="navbar navbar-default navbar-fixed-top" id="nav" role="navigation">
    <div class="container relative-nav-container">
      <a class="toggle-button visible-xs-block" data-target="#navbar-collapse" data-toggle="collapse">
        <i class="fa fa-navicon"></i>
      </a>
      <a class="navbar-brand scroll" href="index.html">
        <%= image_tag 'logo.png', class: 'normal-logo hidden-xs', alt: 'logo' %>
        <%= image_tag 'logo-w.png', class: 'inverse-logo hidden-xs', alt: 'logo' %>
        <%= image_tag 'logo-sign2.png', class: 'visible-xs-block', alt: 'logo', height: 44, width: 40 %>
      </a>
      <ul class="nav navbar-nav navbar-right nav-icons wrap-user-control">
        <li>
          <a href="#fakelink" id="search-open">
            <i class="fa fa-search"></i>
          </a>
        </li>
        <li class="open-signup">
          <a href="#fakelink">
            <i class="fa fa-user"></i>
          </a>
          <div class="wrap-login-signup">
            <div role="tabpanel">
<!-- Nav tabs -->
              <ul class="nav nav-tabs-alt nav-tabs-one" role="tablist">
                <li class="active" role="presentation"><a aria-controls="signup" data-toggle="tab" href="#signup" role="tab">Sign Up</a></li>
                <li role="presentation"><a aria-controls="login" data-toggle="tab" href="#login" role="tab">Log In</a></li>
              </ul>
<!-- Tab panes -->
              <div class="tab-content">
                <div class="tab-pane active text-center" id="signup" role="tabpanel">
                  <div class="signup-content">
                    <h5>Register Customer</h5>
                    <a class="signup-facebook" href="#">
                      <i class="fa fa-facebook-square">&nbsp;&nbsp;</i>Sign in with Facebook
                    </a>
                    <span class="or-sep">or</span>
                    <form class="form">
                      <div class="form-group">
                        <input class="form-control" placeholder="Enter your e-mail" type="text">
                      </div>
                      <div class="form-group">
                        <input class="submit-button form-control" type="submit" value="Create new account"/>
                      </div>
                    </form>
                  </div>
                </div>
                <div class="tab-pane" id="login" role="tabpanel">
                  <div class="signup-content">
                    <h5>Your Account</h5>
                    <form class="form">
                      <div class="form-group">
                        <input class="form-control" placeholder="Login" type="text">
                      </div>
                      <div class="form-group">
                        <input class="form-control" placeholder="Password" type="text">
                      </div>
                      <div class="form-group">
                        <input class="submit-button form-control" type="submit" value="Login"/>
                      </div>
                    </form>
                    <span class="forgot">Forgot
                      <a href="#">password or login</a>?</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </li>
      </ul>
    </div>
    <div class="navbar-search">
      <div class="container">
        <form role="search">
          <div class="input-group">
            <input autocomplete="off" class="form-control" placeholder="Type your search..." type="text">
            <span class="input-group-btn">
              <button class="btn search-close" id="search-close" type="reset">
                <i class="fa fa-close"></i>
              </button>
            </span>
          </div>
        </form>
      </div>
    </div>
  </nav>
</header>
<!--/.header -->
